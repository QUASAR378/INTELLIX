# Copy this file to .env and configure your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
LOG_LEVEL=INFO

# Security
API_KEY=your-secret-api-key-here
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Model Configuration
MODEL_PATH=models/county_energy_model.pkl
DATA_PATH=data/
BACKUP_PATH=backups/

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_DEFAULT=60/minute
RATE_LIMIT_TRAIN=1/minute
RATE_LIMIT_PREDICT=50/minute

# Database (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/county_energy

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging
LOG_FILE=logs/county_planner.log
LOG_FORMAT=json